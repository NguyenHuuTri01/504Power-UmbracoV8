@inherits UmbracoViewPage<Product>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "master.cshtml";
}
<div class=" container h-[300px] lg:h-[300px] md:h-[300px] flex flex-col p-4 section-about" style="
	background: url(@Model.Photos.Url()), linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5));
	background-position: center center;
	background-repeat: no-repeat;
	background-size: cover;
	background-attachment: fixed;
	background-blend-mode: overlay;
">
	<div class="w-full h-full content-center text-center">
		<span class="font-bold text-5xl text-yellow-500 underline text-center uppercase">@Model.Name</span>
	</div>
</div>

<section class="section mb-[20px]">
    <div class="mt-[40px]">
        <div class="row">
            <div class="col-md-6">
                <div class="product-image-container">
                    <img class="product-image" src="@Model.Photos.Url" alt="@Model.ProductName image" />
                </div>
            </div>
            <div class="col-md-6">
                <h1 class="text-3xl font-bold mb-[50px]">@Model.ProductName</h1>
                <div class="product-teaser font-semibold">@Model.Description</div>
                <div class="product-advantages">
                    @if (Model.Features != null)
                    {
                        foreach (var feature in Model.Features)
                        {
                            <div class="product-advantage">
                                <h4>@feature.GetProperty("featureName").Value()</h4>
                                <h5>@feature.GetProperty("featureDetails").Value()</h5>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<hr />
<section class="section section--sand">
    <div class="mt-[50px]">
        <!-- todo: Check if grid is empty via a property value converter -->
        @Html.GetGridHtml(Model, "bodyText", "bootstrap3-fluid")
    </div>
</section>