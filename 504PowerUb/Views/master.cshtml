@using Umbraco.Core.PropertyEditors
@inherits UmbracoViewPage
@{
	Layout = null;
	var home = (Home)Model.Root();
}

<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
	<title>@Model.Name</title>
	<link href="https://cdn.jsdelivr.net/npm/pagedone@1.2.2/src/css/pagedone.css " rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<script src="https://cdn.tailwindcss.com"></script>
	<link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet" />
	<link rel="icon" href="https://504power.com/wp-content/uploads/2021/11/logo-504.png" sizes="32x32" />
	<link rel="icon" href="https://504power.com/wp-content/uploads/2021/11/logo-504.png" sizes="192x192" />
	<link rel="stylesheet" href="@Url.Content("~/css/style.css")" />
</head>

<body>
	<section class="container relative">
		@Html.Partial("~/Views/Partials/Navigation/TopNavigation.cshtml")
		<main>
			@RenderBody()
		</main>
		<footer class="w-full topNav  mt-24 text-white">
			<div class="mx-auto max-w-7xl px-6 sm:px-8 lg:px-12 py-16">
				<!-- Grid -->
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
					<!-- Feedback Section -->
					<div>
						<h4 class="text-lg font-semibold mb-6">504 Power</h4>
						<ul class="space-y-3">
							<li><a href="/tuyen-dung/" class="hover:text-gray-400">Tuyển dụng</a></li>
						</ul>
					</div>
					<!-- Contact Information -->
					<div>
						<h4 class="text-lg font-semibold mb-6">Thông Tin Liên Hệ</h4>
						<ul class="space-y-3">
							<li><a href="tel:+111.111.1111" class="hover:text-gray-400">Hotline (VN): 111.111.1111</a></li>
							<li><a href="" class="hover:text-gray-400">Email: 504power@504power.vn</a></li>
						</ul>
					</div>
					
				</div>
				<!-- Footer Bottom -->
				<div class="mt-12 pt-8 border-t border-gray-700">
					<div class="flex flex-col lg:flex-row justify-between items-center">
						<span class="text-sm text-gray-500">
							© 2024 <a href="" class="hover:text-white">504Power</a>. All rights reserved.
						</span>
						<div class="flex mt-6 lg:mt-0 space-x-4">
							<a href="javascript:;" class="w-10 h-10 flex items-center justify-center bg-gray-700 rounded-full hover:bg-indigo-600 transition-all duration-300">
								<!-- Social Media Icon Here -->
							</a>
							<!-- Repeat for each social media icon -->
						</div>
					</div>
				</div>
			</div>
		</footer>

	</section>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/pagedone@1.2.2/src/js/pagedone.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			  crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
	<script>
		var swiper = new Swiper(".default-carousel", {
			loop: true,
			fraction: true,
			autoplay: {
				delay: 5000,
				disableOnInteraction: false,
			},
			pagination: {
				el: ".swiper-pagination",
				clickable: true,
			},
			navigation: {
				nextEl: ".swiper-button-next",
				prevEl: ".swiper-button-prev",
			},
		});
	</script>
	<script>
		new Swiper(".slide-carousel-products", {
			loop: true,
			slidesPerView: 3,
			spaceBetween: 20,
			navigation: {
                nextEl: ".slide-carousel-products .swiper-button-next",
				prevEl: ".slide-carousel-products .swiper-button-prev",
			},
			breakpoints: {
				1920: {
					slidesPerView: 3,
					spaceBetween: 30
				},
				1028: {
					slidesPerView: 3,
					spaceBetween: 30
				},
				960: {
					slidesPerView: 3,
					spaceBetween: 8
				},
				720: {
					slidesPerView: 3,
					spaceBetween: 6
				},
				540: {
					slidesPerView: 2,
					spaceBetween: 4
				},
				320: {
					slidesPerView: 1,
					spaceBetween: 2
				},
			}
		});

		new Swiper(".slide-carousel-projects", {
			loop: true,
			slidesPerView: 3,
			spaceBetween: 20,
			navigation: {
				nextEl: ".slide-carousel-projects .swiper-button-next",
				prevEl: ".slide-carousel-projects .swiper-button-prev",
			},
			breakpoints: {
				1920: {
					slidesPerView: 3,
					spaceBetween: 30
				},
				1028: {
					slidesPerView: 3,
					spaceBetween: 30
				},
				960: {
					slidesPerView: 3,
					spaceBetween: 8
				},
				720: {
					slidesPerView: 3,
					spaceBetween: 6
				},
				540: {
					slidesPerView: 2,
					spaceBetween: 4
				},
				320: {
					slidesPerView: 1,
					spaceBetween: 2
				},
			}
		});

		new Swiper(".slide-carousel-partners", {
			loop: true,
			fraction: true,
			autoplay: {
				delay: 2000,
				disableOnInteraction: false,
			},
			slidesPerView: 5,
			spaceBetween: 20,
			navigation: {
				nextEl: ".slide-carousel-partners .swiper-button-next",
				prevEl: ".slide-carousel-partners .swiper-button-prev",
			},
			breakpoints: {
				1920: {
					slidesPerView: 5,
					spaceBetween: 30
				},
				1028: {
					slidesPerView: 5,
					spaceBetween: 30
				},
				960: {
					slidesPerView: 5,
					spaceBetween: 8
				},
				720: {
					slidesPerView: 3,
					spaceBetween: 6
				},
				540: {
					slidesPerView: 4,
					spaceBetween: 4
				},
				320: {
					slidesPerView: 3,
					spaceBetween: 2
				},
			}
		});
	</script>

</body>

</html>