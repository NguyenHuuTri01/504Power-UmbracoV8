@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Project>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
	Layout = "master.cshtml";
}

<div class=" container h-[300px] lg:h-[300px] md:h-[300px] flex flex-col p-4 section-about" style="
	background: url(@Model.Photos.Url()), linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5));
	background-position: center center;
	background-repeat: no-repeat;
	background-size: cover;
	background-attachment: fixed;
	background-blend-mode: overlay;
">
	<div class="w-full h-full content-center text-center">
		<span class="font-bold text-5xl text-yellow-500 underline text-center uppercase">@Model.Name</span>
	</div>
</div>

<div class="flex flex-col w-full gap-3 lg:flex-row md:flex-row">
	<div class="w-full md:w-2/3 lg:w-2/3 border-r">
		<section class="section mb-[20px]">
			<div class="mt-[40px]">
				<div class="row">
					<div class="col-md-12">
						<h1 class="text-3xl font-bold mb-[50px]">@Model.ProjectName</h1>
						<div class="product-teaser font-semibold">@Model.Description</div>
					</div>
				</div>
			</div>
		</section>
		<hr />
		<section class="section section--sand">
			<div class="mt-[50px]">
				<!-- todo: Check if grid is empty via a property value converter -->
				@Html.GetGridHtml(Model, "bodyText", "bootstrap3-fluid")
			</div>
		</section>
	</div>
	<div class="w-full md:w-1/3 lg:w-1/3 flex flex-col gap-3 mt-[40px]">
		<span class="font-bold text-base text-black text-left uppercase">Dự án liên quan</span>
		<div class="flex flex-col gap-2  p-1">
			<div class="flex flex-row gap-2 w-full hover:shadow-lg cursor-pointer rounded">
				<img src="https://504power.com/wp-content/uploads/2022/06/JICA-SON-TRA_504-POWER-6.png" class="h-[80px] w-[100px]">
				<div class="flex flex-col gap-2 w-full">
					<span class="font-bold text-sx h-[55px]">Cải tạo và phát triển lưới điện phân phối Sơn Trà – Đà Nẵng</span>
					<span class="text-xs">10/11/2024</span>
				</div>
			</div>
			<div class="flex flex-row gap-2 w-full hover:shadow-lg cursor-pointer rounded">
				<img src="https://504power.com/wp-content/uploads/2022/11/krongpa_2.png" class="h-[80px]  w-[100px]">
				<div class="flex flex-col gap-2 w-full">
					<span class="font-bold text-sx h-[55px]">Nhà máy thủy điện KrôngPa 2</span>
					<span class="text-xs">10/12/2024</span>
				</div>
			</div>
		</div>
	</div>
</div>
